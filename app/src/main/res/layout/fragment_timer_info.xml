<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.betterlife.timer.item.TimerInfoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.264">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:elevation="3dp"
                    android:onClick="@{() -> viewModel.leaveTimer()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons_44px_back01"
                    tools:visibility="gone" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Constraint_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/text_timer_title"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="標題"
                        android:letterSpacing="0.15"
                        android:text="@{viewModel.info.name}"
                        android:textColor="@color/black_3f3a3a"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_timer_sumText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_sum"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_title"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_title" />

                    <TextView
                        android:id="@+id/text_timer_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:text='@{String.valueOf(viewModel.info.progressTime)+" 分鐘"}'
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_timer_sumText"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_title"
                        app:layout_constraintTop_toTopOf="@+id/text_timer_sumText" />

                    <TextView
                        android:id="@+id/text_timer_targetText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_target"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_sumText"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_sumText" />

                    <TextView
                        android:id="@+id/text_timer_target"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:text='@{String.valueOf(viewModel.info.target)+" 分鐘"}'
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_timer_targetText"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_sum"
                        app:layout_constraintTop_toTopOf="@+id/text_timer_targetText" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="32dp"
                        android:max="@{viewModel.info.target}"
                        android:min="0"
                        android:progress="@{viewModel.info.progressTime}"
                        android:progressDrawable="@drawable/custom_progress_bar_horizontal"
                        android:secondaryProgress="100"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_target"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_targetText"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_targetText"
                        tools:progress="50" />

                    <TextView
                        android:id="@+id/text_plan_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="50%"
                        android:text='@{String.valueOf(((viewModel.info.progressTime*100)/viewModel.info.target))+" %"}'
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar"
                        app:layout_constraintStart_toStartOf="@+id/progressBar"
                        app:layout_constraintTop_toTopOf="@+id/progressBar" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/BarChart_daily"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_dailyTargetText" />

                    <View
                        android:id="@+id/line_timer_1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/bottom_navigation_item_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

                    <TextView
                        android:id="@+id/text_timer_dailyText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_timer_targetText"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/progressBar"
                        app:layout_constraintTop_toBottomOf="@+id/line_timer_1" />

                    <TextView
                        android:id="@+id/text_timer_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:text='@{String.valueOf(viewModel.averageDailyTime)+" 分鐘"}'
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar"
                        app:layout_constraintTop_toBottomOf="@+id/line_timer_1" />

                    <TextView
                        android:id="@+id/text_timer_dailyTargetText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_timer_dailyTargetText"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_dailyText"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_dailyText" />

                    <TextView
                        android:id="@+id/text_timer_dailyTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:text='@{String.valueOf(viewModel.info.dailyTarget)+" 分鐘"}'
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_daily"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_daily" />


                    <View
                        android:id="@+id/line_timer_2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/bottom_navigation_item_normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/BarChart_daily" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Constraint_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Constraint_info">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Constraint_rankText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="32dp"
                        android:elevation="@dimen/elevation_all"
                        android:background="@drawable/border_circle_line_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:id="@+id/text_rank"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center_horizontal|center_vertical"
                            android:letterSpacing="0.15"
                            android:text="@string/text_rank"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_3f3a3a"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/imageView" />

                        <TextView
                            android:id="@+id/text_rank1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="榜一 : "
                            android:letterSpacing="0.15"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_rank" />

                        <TextView
                            android:id="@+id/text_rank2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="榜二 : "
                            android:letterSpacing="0.15"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/text_rank1"
                            app:layout_constraintHorizontal_bias="0.114"
                            app:layout_constraintStart_toStartOf="@+id/text_rank1"
                            app:layout_constraintTop_toBottomOf="@+id/text_rank1" />

                        <TextView
                            android:id="@+id/text_rank3"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="榜三 : "
                            android:letterSpacing="0.15"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/text_rank2"
                            app:layout_constraintHorizontal_bias="0.114"
                            app:layout_constraintStart_toStartOf="@+id/text_rank2"
                            app:layout_constraintTop_toBottomOf="@+id/text_rank2" />

                        <TextView
                            android:id="@+id/text_rank4"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="榜四 : "
                            android:letterSpacing="0.15"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/text_rank3"
                            app:layout_constraintHorizontal_bias="0.114"
                            app:layout_constraintStart_toStartOf="@+id/text_rank3"
                            app:layout_constraintTop_toBottomOf="@+id/text_rank3" />

                        <TextView
                            android:id="@+id/text_rank5"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="榜五 : "
                            android:letterSpacing="0.15"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/text_rank4"
                            app:layout_constraintHorizontal_bias="0.114"
                            app:layout_constraintStart_toStartOf="@+id/text_rank4"
                            app:layout_constraintTop_toBottomOf="@+id/text_rank4"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/text_rank1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{viewModel.rank[0].user_id}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank1"
                            app:layout_constraintStart_toEndOf="@+id/text_rank1"
                            app:layout_constraintTop_toTopOf="@+id/text_rank1" />

                        <TextView
                            android:id="@+id/text_rank2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{viewModel.rank[1].user_id}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank2"
                            app:layout_constraintStart_toStartOf="@+id/text_rank1_name"
                            app:layout_constraintTop_toTopOf="@+id/text_rank2" />

                        <TextView
                            android:id="@+id/text_rank3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{viewModel.rank[2].user_id}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank3"
                            app:layout_constraintStart_toStartOf="@+id/text_rank2_name"
                            app:layout_constraintTop_toTopOf="@+id/text_rank3" />

                        <TextView
                            android:id="@+id/text_rank4_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{viewModel.rank[3].user_id}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank4"
                            app:layout_constraintStart_toStartOf="@+id/text_rank3_name"
                            app:layout_constraintTop_toTopOf="@+id/text_rank4" />

                        <TextView
                            android:id="@+id/text_rank5_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{viewModel.rank[4].user_id}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank5"
                            app:layout_constraintStart_toStartOf="@+id/text_rank4_name"
                            app:layout_constraintTop_toTopOf="@+id/text_rank5" />

                        <TextView
                            android:id="@+id/text_rank1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="50dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{"|  累積時間 : "+viewModel.rank[0].totalTime + " 分鐘"}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank1_name"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintStart_toStartOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/text_rank1_name" />

                        <TextView
                            android:id="@+id/text_rank2_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{"|  累積時間 : "+viewModel.rank[1].totalTime + " 分鐘"}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank2_name"
                            app:layout_constraintStart_toStartOf="@+id/text_rank1_time"
                            app:layout_constraintTop_toTopOf="@+id/text_rank2_name" />

                        <TextView
                            android:id="@+id/text_rank3_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{"|  累積時間 : "+viewModel.rank[2].totalTime + " 分鐘"}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank3_name"
                            app:layout_constraintStart_toStartOf="@+id/text_rank2_time"
                            app:layout_constraintTop_toTopOf="@+id/text_rank3_name" />

                        <TextView
                            android:id="@+id/text_rank4_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{"|  累積時間 : "+viewModel.rank[3].totalTime + " 分鐘"}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank4_name"
                            app:layout_constraintStart_toStartOf="@+id/text_rank3_time"
                            app:layout_constraintTop_toTopOf="@+id/text_rank4_name" />

                        <TextView
                            android:id="@+id/text_rank5_time"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="從缺"
                            android:letterSpacing="0.15"
                            android:text='@{"|  累積時間 : "+viewModel.rank[4].totalTime + " 分鐘"}'
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_rank5_name"
                            app:layout_constraintStart_toStartOf="@+id/text_rank4_time"
                            app:layout_constraintTop_toTopOf="@+id/text_rank5_name" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/_29_win" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>