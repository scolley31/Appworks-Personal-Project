<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.betterlife.timer.item.TimerInfoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.264">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:elevation="3dp"
                    android:onClick="@{() -> viewModel.leaveTimer()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons_44px_back01" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/text_timer_title"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="標題"
                        android:letterSpacing="0.15"
                        android:text="@{viewModel.info.name}"
                        android:textColor="@color/black_3f3a3a"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_timer_sumText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_sum"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_title"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_title" />

                    <TextView
                        android:id="@+id/text_timer_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text='@{String.valueOf(viewModel.info.sumDaily)+" 分鐘"}'
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_timer_sumText"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_title"
                        app:layout_constraintTop_toTopOf="@+id/text_timer_sumText" />

                    <TextView
                        android:id="@+id/text_timer_targetText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.15"
                        android:text="@string/text_target"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_sumText"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_sumText" />

                    <TextView
                        android:id="@+id/text_timer_target"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text='@{String.valueOf(viewModel.info.target)+" 分鐘"}'
                        android:hint="0 分鐘"
                        android:letterSpacing="0.15"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_timer_targetText"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_sum"
                        app:layout_constraintTop_toTopOf="@+id/text_timer_targetText" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="32dp"
                        android:min="0"
                        android:max="100"
                        android:progress="50"
                        app:layout_constraintEnd_toEndOf="@+id/text_timer_target"
                        app:layout_constraintStart_toStartOf="@+id/text_timer_targetText"
                        app:layout_constraintTop_toBottomOf="@+id/text_timer_targetText" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>