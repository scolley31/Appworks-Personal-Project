<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="otherPlan"
            type="com.example.betterlife.data.Plan" />
        <variable
            name="viewModel"
            type="com.example.betterlife.other.OtherViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_circle_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_other_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint="計畫名稱"
                android:text="@{otherPlan.name}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_other_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="計畫分類"
                android:text='@{"分類 : "+otherPlan.category}'
                app:layout_constraintStart_toStartOf="@+id/text_other_title"
                app:layout_constraintTop_toBottomOf="@+id/text_other_title" />

            <TextView
                android:id="@+id/text_other_target"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="計畫目標"
                android:text='@{"目標 : "+String.valueOf(otherPlan.target)+" 分鐘"}'
                app:layout_constraintStart_toStartOf="@+id/text_other_category"
                app:layout_constraintTop_toBottomOf="@+id/text_other_category" />

            <TextView
                android:id="@+id/text_other_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text='@{"參加人數 : "+String.valueOf(otherPlan.members.size)+ " 人"}'
                android:hint="參加人數"
                app:layout_constraintStart_toStartOf="@+id/text_other_target"
                app:layout_constraintTop_toBottomOf="@+id/text_other_target" />

            <TextView
                android:id="@+id/text_other_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:hint="榜一"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_other_members"
                app:layout_constraintTop_toBottomOf="@+id/text_other_members" />

            <ImageView
                android:id="@+id/button_addOthersTask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/outline_group_add_black_18" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>