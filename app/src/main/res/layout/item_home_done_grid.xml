<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="plan"
            type="com.example.betterlife.data.Plan" />
        <variable
            name="viewModel"
            type="com.example.betterlife.home.item.HomeDoneViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_circle_line"
            android:onClick="@{() -> viewModel.navigateTimer(plan)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/text_plan_name"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint="名稱"
                android:text="@{plan.name}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_plan_category"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:hint="分類"
                android:text="@{plan.category}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/text_plan_name"
                app:layout_constraintStart_toEndOf="@+id/text_plan_name"
                app:layout_constraintTop_toTopOf="@+id/text_plan_name"
                app:layout_constraintVertical_bias="1.0" />

            <ProgressBar
                android:id="@+id/plan_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:max="@{plan.target}"
                android:min="0"
                android:progress="@{plan.progressTime}"
                android:progressDrawable="@drawable/custom_progress_bar_horizontal"
                android:secondaryProgress="100"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_time_sum"
                app:layout_constraintTop_toBottomOf="@+id/text_time_target"
                app:layout_constraintVertical_bias="0.0"
                tools:progress="50" />

            <TextView
                android:id="@+id/text_time_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="累積時間"
                android:text='@{"累積時間: "+String.valueOf(plan.progressTime)+" 分鐘"}'
                app:layout_constraintStart_toStartOf="@+id/text_plan_name"
                app:layout_constraintTop_toBottomOf="@+id/text_plan_name" />

            <TextView
                android:id="@+id/text_time_target"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:hint="目標時間"
                android:text='@{"目標時間: "+String.valueOf(plan.target)+" 分鐘"}'
                app:layout_constraintBottom_toBottomOf="@+id/text_time_sum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_time_sum" />

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(((plan.progressTime*100)/plan.target))+" %"}'
                android:hint="30%"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/plan_progress"
                app:layout_constraintEnd_toEndOf="@+id/plan_progress"
                app:layout_constraintStart_toStartOf="@+id/plan_progress"
                app:layout_constraintTop_toTopOf="@+id/plan_progress" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>