<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.betterlife.home.HomeFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/otherFragment"
        android:name="com.example.betterlife.other.OtherFragment"
        android:label="OtherFragment"
        tools:layout="@layout/fragment_other" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_otherFragment"
        app:destination="@id/otherFragment" />
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.betterlife.timer.TimerFragment"
        android:label="TimerFragment"
        tools:layout="@layout/fragment_timer" >
        <argument
            android:name="planKey"
            app:argType="com.example.betterlife.data.Plan"
            app:nullable="false"/>
    </fragment>
    <action
        android:id="@+id/action_global_timerFragment"
        app:destination="@id/timerFragment" />
    <dialog
        android:id="@+id/addTaskFragment"
        android:name="com.example.betterlife.addtask.AddTaskFragment"
        android:label="AddTaskFragment"
        tools:layout="@layout/dialog_addtask"/>
    <action
        android:id="@+id/action_global_addTaskFragment"
        app:destination="@id/addTaskFragment" />
</navigation>